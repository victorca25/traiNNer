      , "use_shuffle": true
      , "znorm": false
      , "n_workers": 4
      , "batch_size": 8
      , "virtual_batch_size": 8
      , "preprocess": "crop"
      , "crop_size": 128
      , "image_channels": 3
      
      // Color space conversion
      // , "color": "y"
      // , "color_LR": "y"
      // , "color_HR": "y"
      
      // Rotations augmentations:
      , "use_flip": true
      , "use_rot": true
      , "use_hrrot": false
      
